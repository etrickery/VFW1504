
//VARIABLES





//WINDOW VIEW
var menuView = Ti.UI.createView({
	height: displayHeight - 70,
	width: displayWidth,
	bottom: 0,
	backgroundColor: '#FFF'
});

var menuViewBorder = Ti.UI.createView({
	height: 1,
	backgroundColor: '#000',
	top: 0
});







//MENU

		//LOGO
				var logo = Ti.UI.createView({
					backgroundColor: '#CCC',
					top: 10,
					right: 0,
					width: displayWidth - 40,
					left: 20,
					borderRadius: 10,
					height: 200
				});
				
				var logoLabel = Ti.UI.createLabel({
					text: 'dossieR',
					color: '#FFF',
					font: {fontSize: 44, fontFamily: "Copperplate"},
					bottom: 0,
					right: 5
				});
				
				logo.add(logoLabel);
				
				

		//GALLERY BUTTON
	
				var gallery = Ti.UI.createView({
					backgroundColor: '#CCC',
