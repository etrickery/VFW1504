
//functions


//gallery
var openGallery = function(){
	
	//gallery window
	var galleryView = Ti.UI.createWindow({
		backgroundColor: '#CCC'
	});
	
	//gallery title bar
	var galleryTitleBar = Ti.UI.createView({
		backgroundColor: '#FFF',
		height: 60,
		top: 0
	});
		
	var galleryTitleBarBorder = Ti.UI.createView({
		backgroundColor: '#333',
		height: 1,
		top: galleryTitleBar.height + galleryTitleBar.top
	});
	
	var galleryTitleBarLabel = Ti.UI.createLabel({
		text: 'Image Gallery',
		bottom: 3,
		align: 'center',
	});
	
	galleryTitleBar.add(galleryTitleBarLabel);
		
	//return to menu button (goes in title bar)	
	var closeButton = Ti.UI.createView({
		bottom: 3,
		right: 3,
		borderWidth: 1,
		backgroundColor: '#FFF',
		height: 15,
		width: 36
	});
	
	var closeButtonLabel = Ti.UI.createLabel({
		text: 'MENU',
		align: 'center',
		font: {fontSize: 10, fontFamily: "Helvetica", fontColor: "#000"}
	});
	
	closeButton.add(closeButtonLabel);
	
	
	//close gallery function
	var closeGallery = function(){
		galleryView.close();	
	};

	//close button event listener
	closeButton.addEventListener("click", closeGallery);
	
	
	
	//build gallery
	galleryTitleBar.add(closeButton);
	
	galleryView.add(galleryTitleBar, galleryTitleBarBorder);
	galleryView.open();
};

//about 
var openAbout = function(){
	
	//gallery window
	var aboutView = Ti.UI.createWindow({
		backgroundColor: '#CCC'
	});
	
	//gallery title bar
	var aboutTitleBar = Ti.UI.createView({
		backgroundColor: '#FFF',
		height: 60,
		top: 0
	});
		
	var aboutTitleBarBorder = Ti.UI.createView({
		backgroundColor: '#333',
		height: 1,
		top: aboutTitleBar.height + aboutTitleBar.top
	});
	
	var aboutTitleBarLabel = Ti.UI.createLabel({
		text: 'About Project 3',
		bottom: 3,
		align: 'center',
	});
	
	aboutTitleBar.add(aboutTitleBarLabel);
		
	//return to menu button (goes in title bar)	
	var aboutCloseButton = Ti.UI.createView({
		bottom: 3,
		right: 3,
		borderWidth: 1,
		backgroundColor: '#FFF',
		height: 15,
		width: 36
	});
	
	var aboutCloseButtonLabel = Ti.UI.createLabel({
		text: 'MENU',
		align: 'center',
		font: {fontSize: 10, fontFamily: "Helvetica", fontColor: "#000"}
	});
	
	aboutCloseButton.add(aboutCloseButtonLabel);
	
	//about documentation
	var aboutView = Ti.UI.createView({
		height: 500,
		width: screenWidth,
		backgroundColor: '#000',
		top: aboutTitleBarBorder + 10,
		
	});
	
	var aboutLabel = Ti.UI.createLabel({
		text: 'Eric Pfister /nProject 3 /nAll images original',
		align: 'center',
		font: {fontSize: 10, fontFamily: "Helvetica", fontColor: "#000"}
	});
	
	aboutView.add(aboutLabel);
	
	
	//close about function
	var closeAbout = function(){
		aboutView.close();	
	};

	//close button event listener
	aboutCloseButton.addEventListener("click", closeAbout);
	
	
	
	//build gallery
	aboutTitleBar.add(aboutCloseButton);
	
	aboutView.add(aboutTitleBar, aboutTitleBarBorder, aboutView);
	aboutView.open();
};


//enter gallery event listener
galleryButton.addEventListener("click", openGallery);
aboutButton.addEventListener("click", openAbout);



