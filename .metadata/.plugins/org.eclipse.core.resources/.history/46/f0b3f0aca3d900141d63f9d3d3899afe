//Quote Viewer app
//

Ti.UI.setBackground('#000');


var mainWindow = Ti.UI.createWindow({
	backgroundColor: '#fff',
	backgroundImage: 'pattern.png',
	backgroundRepeat: true,
	title: 'My first window'
	
});

var quoteView = Ti.UI.createView({
	backgroundColor: '#333',
	borderRadius: 5,
	borderWidth: 1,
	borderColor: '#fff',
	height: 400,
	width: 90%,
	id: 'QuoteBox'
	
	
});


mainWindow.add(quoteView);
mainWindow.open();



