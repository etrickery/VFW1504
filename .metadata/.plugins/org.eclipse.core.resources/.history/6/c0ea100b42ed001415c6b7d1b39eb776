
//VARIABLES





//WINDOW VIEW
var menuView = Ti.UI.createView({
	height: displayHeight - 70,
	width: displayWidth,
	bottom: 0,
	backgroundColor: '#FFF'
});

var menuViewBorder = Ti.UI.createView({
	height: 1,
	backgroundColor: '#000',
	top: 0
});




//MENU
var galleryButton = Ti.UI.createView({
	top: 10,
	right: 0,
	width: displayWidth - 10,
	height: 150 
});

var galleryButtonLabel = TI.UI.createLabel({
	text: 'GALLERY',
	font: {fontSize: 14, fontFamily: "Copperplate", fontColor: "#000"},
	bottom: 5,
	left: 5
});

galleryButton.add(galleryButtonLabel);





//ADD MENU TO MAINWINDOW
menuView.add(menuViewBorder, galleryButton);
mainWindow.add(menuView);
