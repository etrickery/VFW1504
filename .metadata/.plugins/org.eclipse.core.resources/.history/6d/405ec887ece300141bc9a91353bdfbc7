	headerTitle: "Jeep",
	footerTitle: "Jeep vehicles"
});

var fiatBrand = Ti.UI.createTableViewSection({
	headerTitle: "Fiat",
	footerTitle: "Fiat vehicles"
});

var brandSections = [dodgeBrand, chryslerBrand, jeepBrand, fiatBrand];

menuTable.setData(brandSections);

