var menuTable = Ti.UI.createTableView({
	top: titleBorder.top + titleBorder.height







var dodgeBrand = Ti.UI.createTableViewSection({
	headerTitle: "Dodge",
	footerTitle: "Dodge vehicles"
});

var chryslerBrand = Ti.UI.createTableViewSection({
	headerTitle: "Chrysler",
	footerTitle: "Chrysler vehicles"
});

