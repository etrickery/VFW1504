Ti.UI.setBackground('#000');


var mainWindow = Ti.UI.createWindow({
	backgroundColor: '#fff',
	backgroundImage: 'pattern.png',
	backgroundRepeat: true,
	title: 'Quote Viewer'
	
});

var quoteView = Ti.UI.createView({	
	backgroundColor: '#CCC',
	borderRadius: 5,
	borderWidth: 1,
	borderColor: '#fff',
	top: 20,
	height: '80%',
	width: '90%',
	id: 'QuoteBox'
});

var quoteText;
var quoteContent;
var nextQuote;
var prevQuote;
var loadNavtabs = require("navtabs");
var quoteNav;
var prev;
var next;

quoteNav.add(prev, next);
quoteView.add(quoteText);
mainWindow.add(quoteNav, quoteView);
mainWindow.open();


