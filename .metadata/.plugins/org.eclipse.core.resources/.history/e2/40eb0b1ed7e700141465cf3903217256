Ti.UI.setBackgroundColor = '#000';



var mainMenu = Ti.UI.createWindow({
	backgroundColor: '#ddd'
});





//titlebar

var titleBar = Ti.UI.createView({
	backgroundColor: '#FFF',
	height: 60,
	top: 0
});
	
var titleBarBorder = Ti.UI.createView({
	backgroundColor: '#333',
	height: 1,
	top: titleBar.height + titleBar.top
});

var titleBarLabel = Ti.UI.createLabel({
	text: 'Project 3: Image Gallery',
	bottom: 3,
	align: 'center',
});

titleBar.add(titleBarLabel);





//functions

var openGallery = function(){
	var galleryView = Ti.UI.createWindow({
		backgroundColor: '#ddd'
	});
	
	var closeButton = Ti.UI.createView({
		top: '50%',
		right: 3,
		borderWidth: 1,
		backgroundColor: '#FFF',
		height: 5,
		width: 20
	});
	
	var closeButtonLabel = Ti.UI.createView({
		text: 'close',
		font: {fontSize: 8, fontFamily: "Helvetica"},
	});
	
	closeButton.add(closeButtonLabel);
	closeButton.addEventListener("click", closeGallery);
	
	
	titleBar.add(closeButton);
	galleryView.add(titleBar, titleBarBorder, galleryButton);
	galleryView.open();
};


var closeGallery = function(){
		galleryView.close();	
};







//menu

var galleryButton = Ti.UI.createView({
	top: '10%',
	borderWidth: 1,
	borderRadius: 10,
	backgroundColor: '#FFF',
	height: '30%',
	width: '95%'
});

var enterGallery = Ti.UI.createLabel({
	text: 'Gallery',
	align: 'center',
	top: '75%',
	right: '5%',
	font: {fontSize: 36, fontFamily: "Helvetica"},
});

galleryButton.add(enterGallery);





//enter gallery event listener
galleryButton.addEventListener("click", openGallery);






//load page
//var loadVehicles = require('vehicles');


mainMenu.add(titleBar, titleBarBorder, galleryButton);
mainMenu.open();








