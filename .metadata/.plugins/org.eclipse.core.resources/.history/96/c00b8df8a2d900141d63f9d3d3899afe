Ti.UI.setBackground('#000');


var mainWindow = Ti.UI.createWindow({
	backgroundColor: '#fff',
	backgroundImage: 'pattern.png',
	backgroundRepeat: true,
	title: 'My first window'
	
});

var firstView = Ti.UI.createView({
	backgroundColor: '#333',
	borderRadius: 5,
	borderWidth: 1,
	height: 350,
	top: 20,
	left: 20,
	right: 20
	
	
});


mainWindow.add(firstView);
mainWindow.open();



