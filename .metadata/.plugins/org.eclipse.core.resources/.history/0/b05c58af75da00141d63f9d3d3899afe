//Quote Viewer app
//

Ti.UI.setBackground('#000');


var mainWindow = Ti.UI.createWindow({
	backgroundColor: '#fff',
	backgroundImage: 'pattern.png',
	backgroundRepeat: true,
	title: 'Quote Viewer'
	
});

var quoteView = Ti.UI.createView({	
	backgroundColor: '#CCC',
	borderRadius: 5,
	borderWidth: 1,
	borderColor: '#fff',
	top: 20,
	height: '80%',
	width: '90%',
	id: 'QuoteBox'
});

var quoteText;
var quoteList = ["test 1", "test 2"];
var quoteContent;
var nextQuote;
var prevQuote;
var loadNavtabs = require("navtabs");
var quoteNav;
var prev;
var next;
var q;


nextQuote = function(){
	//quoteContent.hide();
	//quoteContent = null;
	
	for(q = 0; q < quoteList.Length; q++){
		//quoteContent = quoteList[q];
		quoteText = Ti.UI.createLabel({
			text: quoteList[q],
			color: '#fff',
			font: {
				fontSize: 22, 
				fontFamily: 'Baskerville', 
				fontWeight: 'Bold',
				fontStyle: 'italic'
			},
			top: '5%',
			left: '5%',
			right: '5%'
	
	
		});
		
	};
};


quoteNav.add(prev, next);
quoteView.add(quoteText);

next.addEventListener("Click", quoteNav);

mainWindow.add(quoteNav, quoteView);
mainWindow.open();


